<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Bootstrap demo</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Gilroy !important;
      }

      html,
      body {
        height: 100%;
        width: 100%;
      }

      .displayFlex {
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .wrapper {
        height: 100%;
        width: 100%;
      }

      .cart-ctn {
        width: 100%;
      }
      .log{
  height: 40px;
}
    </style>
  </head>
  <body>
    <div class="wrapper">
      <%include ./partials/navbar.ejs%>
      <div class="cart-ctn container mt-5">
        <div class="container d-flex justify-content-between">
          <h2>Your cart</h2>
          <div class="payment-console">
            <h2>Total Price - Rs. 3000</h2>
            <hr />
            <a href="/payments">
            <button class="btn btn-success">Pay Now</button>
          </a>
          </div>
        </div>
        <hr />

        <table class="table table-bordered mt-5">
          <thead>
            <tr>
              <th scope="col">S.No.</th>
              <th scope="col">Service Name</th>
              <th scope="col">Preffered Time</th>
              <th scope="col">Preffered Date</th>
              <th scope="col">Address</th>
              <th scope="col">Instructions (if any)</th>
              <th scope="col">Service Price</th>
              <th scope="col">Edit</th>
              <th scope="col">Remove</th>
            </tr>
          </thead>
          <tbody>
            <%data.forEach((e,i)=>{%>
            <tr>
              <td><%=i+1%></td>
              <td><%=e.service%></td>
              <td><%=e.prefferedTime%></td>
              <td><%=e.date%></td>
              <td><%=e.address%></td>
              <td><%=e.instruction%></td>
              <td><%=e.price%></td>
              <td>
                <button
                  class="btn btn-primary"
                  type="button"
                  data-bs-toggle="modal"
                  data-bs-target="#exampleModal"
                  onclick="setData(`<%=e%>`)"
                >
                  Edit
                </button>
              </td>
              <td><button class="btn btn-primary">Remove</button></td>
            </tr>
            <%})%>
          </tbody>
        </table>
      </div>
      <div
        class="modal fade"
        id="exampleModal"
        tabindex="-1"
        aria-labelledby="exampleModalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="exampleModalLabel">
                Modal title
              </h1>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
            <div class="modal-body">
              <!-- <h5>Price - Rs. <span class="price"></span></h5> -->
              <!-- <hr /> -->
              <form action="/createOrder" method="post">
                <div class="mb-3">
                  <label for="exampleInputEmail8" class="form-label"
                    >Service Name</label
                  >
                  <input
                    type="text"
                    name="serviceName"
                    class="form-control service-name"
                    id="exampleInputEmail8"
                    aria-describedby="emailHelp"
                  />
                </div>
                <div class="mb-3">
                  <label for="exampleInputEmail2" class="form-label"
                    >Service Price</label
                  >
                  <input
                    name="price"
                    type="text"
                    class="form-control price"
                    id="exampleInputEmail2"
                    aria-describedby="emailHelp"
                  />
                </div>

                <div class="mb-3">
                  <label for="exampleInputEmail3" class="form-label"
                    >Preffered Date</label
                  >
                  <input
                    name="date"
                    type="date"
                    class="form-control date"
                    id="exampleInputEmail3"
                    aria-describedby="emailHelp"
                  />
                </div>
                <div class="mb-3">
                  <label for="exampleInputEmail4" class="form-label"
                    >Preffered Time</label
                  >
                  <select
                    class="form-select time"
                    aria-label="Default select example"
                    name="time"
                  >
                    <option selected>Select time slot</option>
                    <option value="10:00 - 12:00 PM">10:00 - 12:00 PM</option>
                    <option value="10:00 - 12:00 PM">12:00 - 02:00 PM</option>
                    <option value="02:00 - 04:00 PM">02:00 - 04:00 PM</option>
                    <option value="04:00 - 06:00 PM">04:00 - 06:00 PM</option>
                  </select>
                </div>
                <div class="mb-3">
                  <label for="exampleInputEmail5" class="form-label"
                    >Address</label
                  >
                  <input
                    name="address"
                    type="text"
                    class="form-control address"
                    id="exampleInputEmail5"
                    aria-describedby="emailHelp"
                  />
                </div>
                <div class="mb-3">
                  <label for="exampleInputEmail6" class="form-label"
                    >Instructions (if any)</label
                  >
                  <div class="form-floating mb-3">
                    <textarea
                      name="intruc"
                      class="form-control text-area"
                      placeholder="Leave a comment here"
                      id="floatingTextarea"
                    ></textarea>
                    <label for="floatingTextarea">Instructions</label>
                  </div>
                </div>

                <button type="submit" class="btn btn-primary">
                  Save Changes
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
      crossorigin="anonymous"
    ></script>
    <script>
      
    </script>
  </body>
</html>
