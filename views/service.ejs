<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Bootstrap demo</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Gilroy !important;
      }

      html,
      body {
        height: 100%;
        width: 100%;
      }

      .displayFlex {
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .wrapper {
        height: 100%;
        width: 100%;
      }

      .left {
        height: 100%;
        width: 50%;
        overflow: hidden;
        padding: 3%;
        background-color: rgba(0, 0, 0, 0.1);
      }

      .left > img {
        height: 100%;
        width: 100%;
        object-fit: cover;
        object-position: center;
      }

      .right {
        height: 100%;
        width: 50%;
        flex-direction: column;
        justify-content: space-evenly;
        padding: 5% 0;
      }

      .btn-ctn {
        flex-direction: column;
        align-items: flex-start;
      }

      input {
        text-transform: uppercase;
      }

      .ctn {
        width: 100%;
        height: 92vh;
      }
      .h3c {
        color: rgb(2, 2, 2);
        text-decoration: solid;
        font-weight: bold;
        
      }
      #newsize{
        width: 300px;
      }
      
      @media (max-width: 400px) {
       #fx{
        display: flex;
        justify-content: center;
        flex-direction: column;
       }
      }

      @media (max-width: 1024px) {
      
        #fx{
        display: flex;
        justify-content: center;
        flex-direction: column;
       }
       
      }
      
    </style>
  </head>
  <body>
    <div class="wrapper">
      <%include ./partials/navbar.ejs%>

      <div class="ctn displayFlex" id="fx">
        <div class="left displayFlex">
          <img
            src="../images/<%=data.servicePoster%>"
            alt="service-image"
          />
        </div>
        <div class="right displayFlex">
          <div class="serivce-head-ctn">
            <h1 class="main-head"><%=data.serviceName%></h1>
            <h3 >Service starting at @149</h3>
            <h7 class="h3c">Go Cashless :
              </h7> 
              <br>
              <h7>Pay Online after your service PayTm and other.
              
            </h7>
            <br>

            <h7 class="h3c"> Proffesional:
            </h7> 
            <br>
            <h7>Inhouse Verified and Trained Professionals
            
          </h7>
          </div>
          <h5>Choose service -</h5>
          <div class="btn-ctn displayFlex">
            <% data.serviceCategory.forEach((e)=>{%>
            <div class="div">
              <button id="newsize"
                class="btn btn-primary m-2 btns ps-5 pe-5 pt-2 pb-2"
                type="button"
                data-index="<%=e.price%>"
                data-bs-toggle="modal"
                data-bs-target="#exampleModal"
              >
                <%=e.name%>
              </button>
              <span class="btn btn-info m-2" id="kkk">Price Rs. <%=e.price%></span>
            </div>

            <%})%>
          </div>
        </div>

        <!-- Modal -->
        <div
          class="modal fade"
          id="exampleModal"
          tabindex="-1"
          aria-labelledby="exampleModalLabel"
          aria-hidden="true"
        >
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">
                  Modal title
                </h1>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="modal"
                  aria-label="Close"
                ></button>
              </div>
              <div class="modal-body">
                <!-- <h5>Price - Rs. <span class="price"></span></h5> -->
                <!-- <hr /> -->
                <form action="/createOrder" method="post">
                  <div class="mb-3">
                    <label for="exampleInputEmail8" class="form-label"
                      >Service Name</label
                    >
                    <input
                      type="text"
                      name="serviceName"
                      class="form-control service-name"
                      id="exampleInputEmail8"
                      aria-describedby="emailHelp"
                    />
                  </div>
                  <div class="mb-3">
                    <label for="exampleInputEmail2" class="form-label"
                      >Service Price</label
                    >
                    <input
                      name="price"
                      type="text"
                      class="form-control price"
                      id="exampleInputEmail2"
                      aria-describedby="emailHelp"
                    />
                  </div>

                  <div class="mb-3">
                    <label for="exampleInputEmail3" class="form-label"
                      >Preffered Date</label
                    >
                    <input
                      name="date"
                      type="date"
                      class="form-control"
                      id="exampleInputEmail3"
                      aria-describedby="emailHelp"
                    />
                  </div>
                  <div class="mb-3">
                    <label for="exampleInputEmail4" class="form-label"
                      >Preffered Time</label
                    >
                    <select
                      class="form-select"
                      aria-label="Default select example"
                      name="time"
                    >
                      <option selected>Select time slot</option>
                      <option value="10:00 - 12:00 PM">10:00 - 12:00 PM</option>
                      <option value="10:00 - 12:00 PM">12:00 - 02:00 PM</option>
                      <option value="02:00 - 04:00 PM">02:00 - 04:00 PM</option>
                      <option value="04:00 - 06:00 PM">04:00 - 06:00 PM</option>
                    </select>
                  </div>
                  <div class="mb-3">
                    <label for="exampleInputEmail5" class="form-label"
                      >Address</label
                    >
                    <input
                      name="address"
                      type="text"
                      class="form-control"
                      id="exampleInputEmail5"
                      aria-describedby="emailHelp"
                    />
                  </div>
                  <div class="mb-3">
                    <label for="exampleInputEmail6" class="form-label"
                      >Instructions (if any)</label
                    >
                    <div class="form-floating mb-3">
                      <textarea
                        name="instruc"
                        class="form-control text-area"
                        placeholder="Leave a comment here"
                        id="floatingTextarea"
                      ></textarea>
                      <label for="floatingTextarea">Instructions</label>
                    </div>
                  </div>

                  <button type="submit" class="btn btn-primary">
                    Add to cart
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
      crossorigin="anonymous"
    ></script>
    <script>
      let modalTitle = document.querySelector(".modal-title");
      let price = document.querySelector(".price");
      let serviceName = document.querySelector(".service-name");
      let mainHead = document.querySelector(".main-head");
      // price.disabled = "true";
      // serviceName.disabled = "true";
      let allButtons = document.querySelectorAll(".btns");
      allButtons.forEach((e) => {
        e.addEventListener("click", (data) => {
          console.log("hello")
          modalTitle.textContent =
            mainHead.textContent + " - " + e.textContent.trim("");
          serviceName.value =
            mainHead.textContent + " - " + e.textContent.trim("");
          price.value = e.dataset.index;
        });
      });
    </script>
  </body>
</html>
